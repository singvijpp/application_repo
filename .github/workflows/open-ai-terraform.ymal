name: GPT-4.0 Terraform Assistance

on: [push]

jobs:
  process-terraform:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install openai
    - name: Process Terraform Scripts
      run: python .github/scripts/process_terraform.py
